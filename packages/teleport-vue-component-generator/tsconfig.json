{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "lib",
    "declaration": true,
    "lib": ["es2015", "dom"],
    "rootDir": "src",
    "sourceMap": true,
    "types": ["node", "jest"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "typeRoots" : [
      "../node_modules/@types",
      "./typings"
    ],
  },
  "exclude": [
    "node_modules",
    "lib",
    "./__tests__/**/*"
  ]
}
